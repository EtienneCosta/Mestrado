extends layout 
block content 
    - function indiname(s){return s.split("#")[1] }
    .w3-card-4
        header.w3-container.w3-teal
            h3 Lista de Indivíduos 
        if individuals.length > 0
            .w3-container
                table(class="w3-table-all")
                    tr
                        th URI  
                        th Nome do Indivíduo
                    each i in individuals  
                      - var ind=  indiname(i)
                      tr 
                        td
                            a(href='/repositorio/'+repo+'/individuo/'+ind)= i
                        td #{indiname(i)}

        else 
            .w3-container
              p Ainda não há indivíduos criados ... 
        footer(class="w3-container w3-teal")
            address Gerado por galuno :: 2021-Março, Etienne Costa
                  a(href='/repositorio/'+repo)  [Voltar] 

            