extends layout 
block content 
    - function classname(s){return s.split("#")[1] }
    .w3-card-4
        header.w3-container.w3-teal
            h3 Lista de Classes 
        if classes.length > 0
            .w3-container
                table(class="w3-table-all")
                    tr
                        th URI  
                        th Nome da Classe
                    each c in classes 
                      - var classe=  classname(c)
                      tr 
                        td
                            a(href='/repositorio/'+repo+'/'+classe)= c
                        td #{classname(c)}

        else 
            .w3-container
              p Ainda não há classes criadas ... 
        footer(class="w3-container w3-teal")
            address Gerado por galuno :: 2021-Março, Etienne Costa
                  a(href='/')  [Voltar] 

            