extends layout
block content
    .w3-card-4
      header.w3-container.w3-dark-grey
        h3(style="text-align:center;")= title
      if lista.length > 0
        .w3-container
          table(class="w3-table-all")
            tr 
              th Número
              th Nome
              th Git
            each a in lista
              tr
                td= a.Número
                td= a.Nome
                td= a.Git
      else
        div(class="w3-container")
          p Ainda não há alunos registados...
    br
    .container
      .btn-group.btn-group-justified
        .btn-group
          a(class='btn.btn-success' type='button' href='http://localhost:7777/alunos/registar') Registar
        .btn-group
          a(class='btn.btn-success' type='button' href='http://localhost:7777/alunos/editar') Actualizar
        .btn-group
          a(class='btn.btn-success' type='button' href='http://localhost:7777/alunos/apagar') Apagar
  

      
    
      
    footer(class="w3-container w3-dark-grey")
        address(style="text-align:center;") Gestor de alunos :: 2020-Novembro